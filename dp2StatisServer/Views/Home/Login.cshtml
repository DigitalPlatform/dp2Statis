@model dp2StatisServer.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    var error = Model?.ErrorInfo;
}

<div class="card p-3">
    <div class="card-header p-5 text-primary">管理员登录</div>
    <div class="card-body">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message
                </div>
            }
            <div class="mb-3">
                @Html.LabelFor(a => a.InstanceName, new { @class="form-label"})
                <input class="form-control" asp-for="InstanceName" readonly="readonly" />
                @Html.ValidationMessageFor(a => a.InstanceName, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(a => a.UserName)
                @Html.TextBoxFor(a => a.UserName, new { @class="form-control"})
                @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(a => a.Password)
                @Html.PasswordFor(a => a.Password, new { @class="form-control"})
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            </div>
            @if (string.IsNullOrEmpty(error) == false)
            {
                <div class="mb-3">
                    @Html.TextAreaFor(a => a.ErrorInfo, new { @class = "text-danger w-100 border-0" })
                </div>
            }
            <div class="mb-3 text-center w-100">
                <input type="submit" value="登录" class="btn btn-primary w-50" />
            </div>
        }
    </div>

</div>
